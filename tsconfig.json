{
  "compilerOptions": {
    /* Language and Environment */
    "target": "es2022",
    "lib": ["es2022"],
    "moduleDetection": "force",
    /* Modules */
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "resolveJsonModule": true,
    "rootDir": "./src",
    /* Emit */
    "outDir": "dist",
    /* Interop Constraints */
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    /* Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    /* Completeness */
    "skipLibCheck": true,
    /* Absolute Paths */
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    /* Vitest globals */
    "types": ["vitest/globals"]
  },
  "include": ["./src"]
}
